# The Combine - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/thecombine

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-here-minimum-32-characters

# =============================================================================
# OAUTH PROVIDERS (Optional - at least one recommended for production)
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# =============================================================================
# ADMIN ACCESS
# =============================================================================
# Comma-separated list of email addresses with admin access
ADMIN_EMAILS=admin@example.com

# =============================================================================
# LLM PROVIDERS
# =============================================================================
ANTHROPIC_API_KEY=

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Set to 'true' in production with HTTPS
HTTPS_ONLY=false

# Base URL for OAuth callbacks
BASE_URL=http://localhost:8000