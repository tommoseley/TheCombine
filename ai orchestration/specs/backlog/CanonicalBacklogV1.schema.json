{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/CanonicalBacklogV1.json",
  "title": "CanonicalBacklogV1",
  "type": "object",
  "required": ["type", "version", "sections"],
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "const": "canonical_backlog"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "sections": {
      "type": "object",
      "required": [
        "summary",
        "phase_1_stories",
        "phase_2_stories",
        "phase_3_stories",
        "backlog_summary"
      ],
      "additionalProperties": false,
      "properties": {
        "summary": { "$ref": "#/definitions/sectionBlocks" },
        "phase_1_stories": { "$ref": "#/definitions/sectionBlocks" },
        "phase_2_stories": { "$ref": "#/definitions/sectionBlocks" },
        "phase_3_stories": { "$ref": "#/definitions/sectionBlocks" },
        "backlog_summary": { "$ref": "#/definitions/sectionBlocks" }
      }
    }
  },

  "definitions": {
    "sectionBlocks": {
      "type": "object",
      "required": ["blocks"],
      "additionalProperties": false,
      "properties": {
        "blocks": {
          "type": "array",
          "items": { "$ref": "#/definitions/block" },
          "minItems": 1
        }
      }
    },

    "block": {
      "type": "object",
      "required": ["id", "type"],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": ["paragraph", "heading", "table", "story"]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "paragraph" } }
          },
          "then": {
            "required": ["content"],
            "properties": {
              "content": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "heading" } }
          },
          "then": {
            "required": ["content", "level"],
            "properties": {
              "content": {
                "type": "string",
                "minLength": 1
              },
              "level": {
                "type": "integer",
                "minimum": 1,
                "maximum": 6
              }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "table" } }
          },
          "then": {
            "required": ["data"],
            "properties": {
              "data": {
                "type": "object",
                "required": ["headers", "rows"],
                "additionalProperties": false,
                "properties": {
                  "headers": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1
                    },
                    "minItems": 1
                  },
                  "rows": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "minItems": 1
                    }
                  }
                }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "story" } }
          },
          "then": {
            "required": ["data"],
            "properties": {
              "data": { "$ref": "#/definitions/story" }
            }
          }
        }
      ]
    },

    "story": {
      "type": "object",
      "required": [
        "id",
        "title",
        "user_story",
        "acceptance_criteria",
        "story_points",
        "phase",
        "epic_feature",
        "dependencies",
        "technical_notes"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z0-9_-]+$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "user_story": {
          "type": "string",
          "minLength": 1
        },
        "acceptance_criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "story_points": {
          "type": "integer",
          "minimum": 1
        },
        "phase": {
          "type": "string",
          "enum": ["Phase 1", "Phase 2", "Phase 3"]
        },
        "epic_feature": {
          "type": "string",
          "minLength": 1
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z0-9_-]+$"
          }
        },
        "technical_notes": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
