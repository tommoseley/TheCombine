# The Combine - Terraform Variables
# Copy this to terraform.tfvars and fill in your values

# AWS Region
aws_region = "us-east-1"

# Environment
environment = "prod"

# Application name (used for resource naming)
app_name = "the-combine"

# Database configuration
db_instance_class = "db.t3.micro"  # Free tier eligible
db_name           = "combine"
db_username       = "combine_admin"
db_password       = "CHANGE_ME_STRONG_PASSWORD_HERE"  # Will be stored in Secrets Manager

# App Runner sizing (smallest = cheapest)
app_runner_cpu    = "256"   # 0.25 vCPU
app_runner_memory = "512"   # 0.5 GB

# Domain configuration
domain_name     = "thecombine.ui"
route53_zone_id = "ZXXXXXXXXXXXXX"  # Get from Route 53 console

# GitHub repository (for OIDC authentication)
# Format: "owner/repo"
github_repository = "your-username/the-combine"

# Secrets - These will be stored in AWS Secrets Manager
# Even if leaked here, the actual runtime uses Secrets Manager
anthropic_api_key = "sk-ant-xxxxxxxxxxxxxxxxxxxxxxxx"
secret_key        = "generate-a-random-32-char-string"


# ============================================================
# HOW TO GET YOUR ROUTE 53 ZONE ID:
# ============================================================
# 1. Go to AWS Console → Route 53 → Hosted zones
# 2. Click on "thecombine.ui"
# 3. The Zone ID is shown in the "Hosted zone details" section
#    It looks like: Z0123456789ABCDEFGHIJ
# ============================================================


# ============================================================
# SECURITY NOTES:
# ============================================================
# 1. Secrets are stored in AWS Secrets Manager, not as env vars
# 2. GitHub Actions uses OIDC - no stored AWS credentials
# 3. App Runner fetches secrets at runtime
# 4. Terraform state will contain secret ARNs, not values
#    (but initial values pass through - use remote state for prod)
#
# For extra security, use environment variables instead:
#   export TF_VAR_db_password="your-password"
#   export TF_VAR_anthropic_api_key="sk-ant-..."
#   export TF_VAR_secret_key="random-string"
# ============================================================
