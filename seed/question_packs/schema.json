{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Discovery Question Packs Schema",
  "type": "object",
  "required": ["version", "default_profile", "intent_mapping", "profiles"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "default_profile": {
      "type": "string"
    },
    "intent_mapping": {
      "type": "object",
      "required": [
        "explore_problem",
        "plan_work",
        "change_existing",
        "integrate_systems",
        "produce_output",
        "unknown"
      ],
      "properties": {
        "explore_problem": { "type": "string" },
        "plan_work": { "type": "string" },
        "change_existing": { "type": "string" },
        "integrate_systems": { "type": "string" },
        "produce_output": { "type": "string" },
        "unknown": { "type": "string" }
      }
    },
    "profiles": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["description", "questions"],
        "properties": {
          "description": { "type": "string" },
          "questions": {
            "type": "array",
            "minItems": 1,
            "maxItems": 4,
            "items": {
              "type": "object",
              "required": ["id", "prompt", "reason", "answer_type", "required"],
              "properties": {
                "id": { "type": "string" },
                "prompt": { "type": "string" },
                "reason": { "type": "string" },
                "answer_type": {
                  "type": "string",
                  "enum": ["free_text", "single_select", "multi_select", "boolean"]
                },
                "required": { "type": "boolean" },
                "options": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
