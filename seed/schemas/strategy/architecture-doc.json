{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Architecture Document",
  "required": ["overview", "components", "technology_stack"],
  "properties": {
    "overview": {
      "type": "object",
      "required": ["summary", "architecture_style"],
      "properties": {
        "summary": {"type": "string"},
        "architecture_style": {"type": "string"},
        "key_decisions": {"type": "array", "items": {"type": "string"}}
      }
    },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "responsibility"],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "responsibility": {"type": "string"},
          "technology": {"type": "string"},
          "interfaces": {"type": "array", "items": {"type": "string"}},
          "dependencies": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "technology_stack": {
      "type": "object",
      "properties": {
        "frontend": {"type": "array", "items": {"type": "string"}},
        "backend": {"type": "array", "items": {"type": "string"}},
        "database": {"type": "array", "items": {"type": "string"}},
        "infrastructure": {"type": "array", "items": {"type": "string"}},
        "tools": {"type": "array", "items": {"type": "string"}}
      }
    },
    "data_architecture": {
      "type": "object",
      "properties": {
        "storage_strategy": {"type": "string"},
        "data_flow": {"type": "string"},
        "entities": {"type": "array", "items": {"type": "object"}}
      }
    },
    "security_architecture": {
      "type": "object",
      "properties": {
        "authentication": {"type": "string"},
        "authorization": {"type": "string"},
        "data_protection": {"type": "string"},
        "audit_logging": {"type": "string"}
      }
    },
    "deployment_architecture": {
      "type": "object",
      "properties": {
        "environment": {"type": "string"},
        "scaling_strategy": {"type": "string"},
        "ci_cd": {"type": "string"}
      }
    },
    "adrs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "decision", "rationale"],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "context": {"type": "string"},
          "decision": {"type": "string"},
          "rationale": {"type": "string"},
          "consequences": {"type": "array", "items": {"type": "string"}}
        }
      }
    }
  }
}
