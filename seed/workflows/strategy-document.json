{
  "workflow_id": "strategy-document",
  "name": "Strategy Document",
  "description": "Generate comprehensive strategy document through multi-role collaboration",
  "version": "1.0",
  "document_type": "strategy",
  "steps": [
    {
      "step_id": "discovery",
      "name": "Project Discovery",
      "description": "Gather initial project information and context",
      "role": "PM",
      "task_prompt_id": "strategy-discovery-v1",
      "inputs": [],
      "outputs": ["project-discovery"],
      "output_schema": "project-discovery",
      "allow_clarification": true,
      "model": "sonnet"
    },
    {
      "step_id": "requirements",
      "name": "Requirements Analysis",
      "description": "Analyze and document detailed requirements",
      "role": "BA",
      "task_prompt_id": "strategy-requirements-v1",
      "inputs": ["project-discovery"],
      "outputs": ["requirements-doc"],
      "output_schema": "requirements-doc",
      "allow_clarification": true,
      "model": "sonnet"
    },
    {
      "step_id": "architecture",
      "name": "Architecture Design",
      "description": "Design system architecture based on requirements",
      "role": "Architect",
      "task_prompt_id": "strategy-architecture-v1",
      "inputs": ["project-discovery", "requirements-doc"],
      "outputs": ["architecture-doc"],
      "output_schema": "architecture-doc",
      "allow_clarification": false,
      "quality_gate": "architecture-review",
      "model": "sonnet"
    },
    {
      "step_id": "review",
      "name": "Quality Review",
      "description": "Review all artifacts for completeness and consistency",
      "role": "QA",
      "task_prompt_id": "strategy-review-v1",
      "inputs": ["project-discovery", "requirements-doc", "architecture-doc"],
      "outputs": ["strategy-review"],
      "output_schema": "strategy-review",
      "allow_clarification": false,
      "is_final": true,
      "model": "haiku"
    }
  ],
  "metadata": {
    "estimated_duration_minutes": 15,
    "estimated_cost_usd": 0.50,
    "tags": ["strategy", "planning", "architecture"]
  }
}
