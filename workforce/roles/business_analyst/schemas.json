{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BA Schemas",
  "type": "object",
  "properties": {
    "RequirementSet": {
      "type": "object",
      "required": ["ticket_id", "requirements"],
      "properties": {
        "ticket_id": { "type": "string" },
        "requirements": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "statement"],
            "properties": {
              "id": { "type": "string" },
              "statement": { "type": "string" },
              "rationale": { "type": "string" }
            }
          }
        }
      }
    },
    "FlowDefinition": {
      "type": "object",
      "required": ["ticket_id", "flows"],
      "properties": {
        "ticket_id": { "type": "string" },
        "flows": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "steps"],
            "properties": {
              "name": { "type": "string" },
              "steps": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
