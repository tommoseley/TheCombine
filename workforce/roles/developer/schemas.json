{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Developer Schemas",
  "type": "object",
  "properties": {
    "CodeChangeProposal": {
      "type": "object",
      "required": ["ticket_id", "changes"],
      "properties": {
        "ticket_id": { "type": "string" },
        "changes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "content"],
            "properties": {
              "path": { "type": "string" },
              "content": { "type": "string" }
            }
          }
        },
        "notes": { "type": "string" }
      }
    },
    "TestPlan": {
      "type": "object",
      "required": ["ticket_id", "test_items"],
      "properties": {
        "ticket_id": { "type": "string" },
        "test_items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description"],
            "properties": {
              "description": { "type": "string" },
              "test_file": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
