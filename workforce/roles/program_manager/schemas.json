{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PM Schemas",
  "type": "object",
  "properties": {
    "TicketDefinition": {
      "type": "object",
      "required": ["ticket_id", "title", "summary", "business_value", "scope"],
      "properties": {
        "ticket_id": { "type": "string" },
        "title": { "type": "string" },
        "summary": { "type": "string", "description": "Short description of the problem and outcome." },
        "business_value": { "type": "string", "description": "Why this matters." },
        "scope": { "type": "string", "description": "What is in and out of scope." },
        "assumptions": { "type": "array", "items": { "type": "string" } },
        "risks": { "type": "array", "items": { "type": "string" } }
      }
    },
    "AcceptanceCriterion": {
      "type": "object",
      "required": ["id", "description"],
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "notes": { "type": "string" }
      }
    }
  }
}
